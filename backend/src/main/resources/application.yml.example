spring:
  application:
    name: bscm-backend
  
  datasource:
    url: jdbc:postgresql://127.0.0.1:5432/bscm_db
    username: postgres
    # 本地开发默认密码：通过环境变量 BSCM_DB_PASSWORD 设置，或直接在此处填写
    # 建议使用环境变量：$env:BSCM_DB_PASSWORD="你的密码"
    password: ${BSCM_DB_PASSWORD:your_password_here}
    driver-class-name: org.postgresql.Driver
  
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        format_sql: true
    database-platform: org.hibernate.dialect.PostgreSQLDialect
  
  servlet:
    multipart:
      max-file-size: 10MB
      max-request-size: 50MB

server:
  port: 8080
  servlet:
    context-path: /

# JWT配置
jwt:
  secret: bscm-secret-key-change-in-production
  expiration: 86400000 # 24小时

# 文件上传路径
file:
  upload-dir: ./uploads

logging:
  level:
    com.bscm: DEBUG
    org.springframework.web: INFO

# 阿里云短信配置
# access-key-id 和 access-key-secret 必须从环境变量获取：
# ALIBABA_CLOUD_ACCESS_KEY_ID 和 ALIBABA_CLOUD_ACCESS_KEY_SECRET
# 设置环境变量方法（Windows PowerShell）：
# $env:ALIBABA_CLOUD_ACCESS_KEY_ID="你的AccessKeyId"
# $env:ALIBABA_CLOUD_ACCESS_KEY_SECRET="你的AccessKeySecret"
# 或者永久设置系统环境变量
aliyun:
  sms:
    # 注意：不要在此处填写真实的 access-key-id 和 access-key-secret
    # 代码会优先从环境变量读取，如果环境变量未设置，这里可以留空或填写占位符
    access-key-id: ${ALIBABA_CLOUD_ACCESS_KEY_ID:}
    access-key-secret: ${ALIBABA_CLOUD_ACCESS_KEY_SECRET:}
    sign-name: 你的短信签名
    template-code: 你的短信模板代码
    region: cn-qingdao

